@{
    ViewData["Title"] = "Admin Dashboard";

}


<style>
    .container {
        display: flex; /* Use flexbox for layout */
    }

    .logout-button {
        margin-left: 10px;
        text-decoration: none;
        background: none;
        border: none;
        color: darkblue;
        cursor: pointer;
    }

        .logout-button:hover {
            text-decoration: underline;
        }

    /* Sidebar Styles */
    .sidebar {
        width: 257px;
        background-color: darkblue;
        padding: 20px 0;
        height: 80vh; /* Full height for sidebar */
        display: grid;
        overflow-y: auto; /* Scroll if content exceeds height */
    }

        .sidebar a {
            display: block;
            color: #ffffff;
            padding: 10px 20px;
            text-decoration: solid;
            font-size: 16px;
            border-bottom: 1px solid double;
        }

            .sidebar a:hover {
                background-color: blue;
                width: 290px;
                padding: 10px;
                font-size: 22px;
            }

    /* Main Content Styles */
    .main-content {
        flex-grow: 1;
        padding: 80px;
        background-color: #f8f9fa;
        min-height: 10vh;
    }

        .main-content h1 {
            margin-bottom: 30px;
        }

    /* Navigate BAR Styles */
    .navbar {
        background-color: aliceblue;
        color: #ffffff;
        padding: 10px;
        position: fixed;
        width: 100%; /* make navbar full width on page */
        top: 0;
        z-index: 2; /* keep it on the top of other content */
    }
    /* Sidebar Styles */
    .sidebar {
        width: 290px;
        background-color: #003366; /* Dark blue for professionalism */
        padding: 20px;
        height: 100vh;
        display: flex;
        flex-direction: column;
        color: white;
    }

    /* Admin Clip Art */
    .admin-image {
        padding: 22px;
        width: 80%; /* Adjust size as needed, make it a bit larger */
        border-radius: 33px; /* Slightly rounded corners */
        margin-bottom: 1px; /* Space below image */
        margin-top: 7px;
        display: block;
        max-width: 100%;
        height: auto;
        margin-right: auto;
        margin-left: auto;
    }

</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
                    <button type="submit" class="btn btn-link navbar-text logout-button">Logout</button>
                </form>
                <span class="navbar-text me-7">Hi, @User.Identity.Name</span>

            }


        </div>
    </div>
</nav>

<!-- Flexbox Container for Sidebar and Main Content -->
<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <p></p>
        <p></p>
        <p></p>
        <p></p>
        <img src="~/img/Ad2.png" alt="Admin img" class="admin-image" />
        <h4 class="text-center text-white">BikeHub Admin</h4>
        <a asp-area="Identity" asp-page="/Account/Login">🔓 Login</a>
        <a asp-controller="Admin" asp-action="AdminList">📋 👩🏽‍💻Customer List</a>
        <a asp-controller="Inventory" asp-action="Index">📋🚲Inventory Management</a>
        <a asp-controller="Rental" asp-action="Index">📋🚴‍♂️Rental List</a>
        <a asp-controller="Home" asp-action="ViewContactMessages">📨Contact Us Messages</a>
        <a asp-controller="Rental" asp-action="ViewRentedBikes"> 🚴‍Rented Bikes</a>
        <a asp-controller="PageContent" asp-action="Index">✍️ 📃 Manage Content</a>

    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Welcome to the Admin Dashboard</h1>
        <hr /><br />
        <p></p>
        <h5><span style="color:cadetblue" class="navbar-text me-7">You Logedin as @User.Identity.Name </span></h5>
        <p></p>
        <p></p>

        
        <p>Select an option from the sidebar to manage BikeHub's services.</p>

        <a asp-controller="Account" asp-action="ForgotPassword" class="reset-password-link">🔑 Reset Password</a>


    </div>
</div>


