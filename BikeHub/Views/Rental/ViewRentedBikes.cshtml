@model IEnumerable<BikeHub.Models.Rental>
@{
    ViewData["Title"] = "Rented Bikes List";
}
<head>
    <style>
        /*  container for Sidebar and Main Content */
        .container-dashboard {
            display: flex; 
            min-height: 100vh; 
        }

        /* Sidebar Styles */
        .sidebar {
            width: 276px;
            background-color: #003366;
            padding: 20px 0;
            height: 100vh; 
            overflow-y: auto; 
            flex-shrink: 0; 
        }

            .sidebar a {
                display: block;
                color: #ffffff;
                padding: 10px 20px;
                text-decoration: none;
                font-size: 16px;
            }

                .sidebar a:hover {
                    background-color: blue;
                    width: 290px;
                    padding: 10px;
                    font-size: 22px;
                }

        /* Admin Clip img Art */
        .admin-image {
            padding: 20px;
            width: 80%;
            border-radius: 33px;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1; 
            padding: 40px;
            background-color: #f8f9fa;
        }

        /* Custom CSS for Rental List View */
        h1 {
            color: #333;
            text-align: center;
        }

        .table {
            width: 100%; 
        }

            .table th,
            .table td {
                padding: 8px; 
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table-bordered {
            border: 1px solid #ddd; /* Add borders to table */
        }

        .table thead th {
            background-color: #0066aa;
            color: #fff; 
        }

        .table-responsive {
            overflow-x: auto; 
        }
    </style>
</head>

<!-- Flexbox Container for Sidebar and Main Content -->
<div class="container-dashboard">
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="~/img/Ad2.png" alt="Admin img" class="admin-image" />
        <h4 class="text-center text-white">BikeHub Admin</h4>
        <a asp-area="Identity" asp-page="/Account/Login">🔓 Login</a>
        <a asp-controller="Admin" asp-action="AdminList">📋 👩🏽‍💻Customer List</a>
        <a asp-controller="Inventory" asp-action="Index">📋🚲Inventory Management</a>
        <a asp-controller="Rental" asp-action="Index">📋🚴‍♂️Rental List</a>
        <a asp-controller="Home" asp-action="ViewContactMessages">📨Contact Us Messages</a>
        <a asp-controller="Rental" asp-action="ViewRentedBikes"> 🚴‍Rented Bikes</a>
        <a asp-controller="PageContent" asp-action="Index">✍️ 📃 Manage Content</a>
        <a asp-controller="Reports" asp-action="Index">📊 Reports</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>@ViewData["Title"]</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Bike Rented</th>
                        <th>Date Rented</th>
                        <th>Due Date</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var rental in Model)
                    {
                        <tr>
                            <td>@rental.Id</td>
                            <td>@rental.Name</td>
                            <td>@rental.Email</td>
                            <td>@rental.BikeRented</td>
                            <td>@rental.DateRented.ToShortDateString()</td>
                            <td>@rental.DueDate.ToShortDateString()</td>
                            <td>@rental.AvailabilityStatus</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
