@{
    ViewData["Title"] = "Generate Reports";
}

<h1>Generate Reports</h1>

<div class="report-buttons">
    <button class="btn btn-primary" onclick="location.href='@Url.Action("GenerateReport", "Reports")'">Generate Rental Report</button>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("CustomerReport", "Reports")'">Generate Customer Report</button>
