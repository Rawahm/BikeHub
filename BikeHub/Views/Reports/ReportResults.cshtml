@model IEnumerable<BikeHub.Models.Rental>

@{
    ViewData["Title"] = "Report Results";
}

<h2>Report Results</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Rental ID</th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Bike Rented</th>
            <th>Date Rented</th>
            <th>Due Date</th>
            <th>Date Returned</th>
            <th>Paid</th>
            <th>Availability Status</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var rental in Model)
            {
                <tr>
                    <td>@rental.Id</td>
                    <td>@rental.Name</td>
                    <td>@rental.Email</td>
                    <td>@rental.BikeRented</td>
                    <td>@rental.DateRented.ToShortDateString()</td>
                    <td>@rental.DueDate.ToShortDateString()</td>
                    <td>@(rental.DateReturned?.ToString("yyyy-MM-dd") ?? "Not Returned")</td>
                    <td>@(rental.Paid ? "Yes" : "No")</td>
                    <td>@rental.AvailabilityStatus</td>
                    <td>@rental.Amount.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center" style="color:darkred">No records found for the selected criteria.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="GenerateReport" class="btn btn-primary">Back to Filters</a>