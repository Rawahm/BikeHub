@model List<BikeHub.Models.Customer>

@{
    ViewData["Title"] = "Generate Customer Report";
}

<style>
    h1 {
        color: darkblue;
        text-align: left;
    }

    form {
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 8px;
        background-color: #fafafa;
        box-shadow: 0 2px 10px rgba(0, 5, 8, 0.1);
        display: grid;
        grid-template-columns: auto 1fr;
        column-gap: 15px;
        row-gap: 15px;
        align-items: center;
    }

        form label {
            font-weight: bold;
            color: #555;
            text-align: right;
        }

        form input,
        form select {
            padding: 8px 12px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 14px;
            width: 30%;
        }

        form button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            grid-column: span 2;
            text-align: center;
            width: 22%;
        }

            form button:hover {
                background-color: #0056b3;
            }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }
</style>

<h1>Generate Customer Report</h1>

<div>
    <h6><strong style="color:darkblue">Note:</strong> Use one or more filters below to narrow down the customer report. If no filters are selected, the system will display all available records.</h6>
</div>

<form asp-action="CustomerReport" method="post">
    <label>First Name:</label>
    <input type="text" name="fname" placeholder="Enter first name" />

    <label>Last Name:</label>
    <input type="text" name="lname" placeholder="Enter last name" />

    <label>Email:</label>
    <input type="text" name="email" placeholder="Enter email" />

    <label>Campus:</label>
    <select name="campus">
        <option value="">All</option>
        <option value="HMC">HMC</option>
        <option value="Davis">Davis</option>
    </select>

    <label>Type of Customer:</label>
    <select name="typeofcus">
        <option value="">All</option>
        <option value="Student">Student</option>
        <option value="Staff">Staff</option>
        <option value="Faculty">Faculty</option>
    </select>

    <button type="submit" name="exportType" value="View">Generate Report</button>
    <button type="submit" name="exportType" value="Excel">Export to Excel</button>
</form>

<hr />

@if (Model != null && Model.Any())
{
    <h2>Filtered Customers</h2>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Campus</th>
                <th>Type Of Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.CampusName</td>
                    <td>@customer.TypeOfCustomer</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p style="color:darkred">No results found for the selected filters.</p>
}
