@model List<BikeHub.Models.Customer>

@{
    ViewData["Title"] = "Customer Report";
}

<h2 style="text-align: left; color: #333;">Customer Report</h2>
<div>
    <!-- Message to explain for the admin to choose from -->
    <h6><strong style="color:darkblue">Note:</strong> Use one or more filters below to narrow down the customer report. If no filters are selected, the system will display all available records.</h6>
</div>

<!-- Filters -->
<form asp-action="CustomerReport" method="post">
    <div class="filters">
        <label for="fname">First Name:</label>
        <input type="text" id="fname" name="fname" value="" placeholder="Enter first name" />

        <label for="lname">Last Name:</label>
        <input type="text" id="lname" name="lname" value="" placeholder="Enter last name" />

        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="" placeholder="Enter email" />

        <label for="campus">Campus:</label>
        <select id="campus" name="campus">
            <option value="">All</option>
            <option value="HMC">HMC</option>
            <option value="Davis">Davis</option>
        </select>

        <label for="typeofcus">Type of Customer:</label>
        <select id="typeofcus" name="typeofcus">
            <option value="">All</option>
            <option value="Student">Student</option>
            <option value="Stuff">Staff</option>
            <option value="Faculty">Faculty</option>
        </select>

        <button type="submit">Apply Filters</button>
        <button type="submit" name="exportType" value="Excel">Export to Excel</button>
    </div>
</form>

<!-- Results Table -->
@if (Model != null && Model.Any())
{
    <div class="table-container">
        <table class="customer-report-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Campus</th>
                    <th>Type Of Customer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.CampusName</td>
                        <td>@customer.TypeOfCustomer</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No customers match the filter criteria.</p>
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: left;
        color: #0056b3;
    }

    form {
        margin: 30px;
        padding: 25px;
        max-width: 900px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 15px;
        font-size: 16px;
    }

        form label {
            font-weight: bold;
            color: #555;
            text-align: right;
        }

        form input,
        form select {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 14px;
            width: 100%;
            background-color: #f7f7f7;
            transition: border-color 0.3s ease;
        }

            form input:focus,
            form select:focus {
                border-color: #0056b3;
                outline: none;
            }

        form button {
            padding: 12px 30px;
            background-color: #0056b3;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            grid-column: span 2;
            justify-self: center;
            transition: background-color 0.3s ease;
        }

            form button:hover {
                background-color: #004494;
            }

    .customer-report-table {
        width: 100%;
        border-collapse: collapse;
    }

        .customer-report-table th,
        .customer-report-table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .customer-report-table th {
            background-color: #f4f4f4;
            color: #333;
            font-weight: bold;
        }

        .customer-report-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .customer-report-table tr:hover {
            background-color: #f1f1f1;
        }

    .filters {
        display: grid;
        gap: 15px;
    }

        .filters label {
            margin-bottom: 8px;
            font-size: 14px;
        }

        .filters input,
        .filters select {
            width: 100%;
            max-width: 350px;
        }

    .table-container {
        max-height: 300px; 
        overflow-y: auto;
        margin-top: 20px;
        border: 1px solid #ddd; 
    }
</style>
