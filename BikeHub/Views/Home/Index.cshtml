@model IEnumerable<BikeHub.Models.PageContent>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bike Hub</title>
    <style>
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        header h1 {
            margin: 0;
            font-size: 36px;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
        }

            nav ul li {
                display: inline;
                margin-right: 20px;
            }

                nav ul li a {
                    color: #2345609a;
                    text-decoration: none;
                }

        section {
            padding: 40px 0;
        }

        h2 {
            font-size: 30px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #33bcd3;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #555;
            }

        input[type="text"],
        input[type="email"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #9cbcdc;
            border-radius: 5px;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #33adf3;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #555cdf;
            }

        footer {
            background-color: #33f3;
            color: #0000fb;
            text-align: center;
            padding: 10px 0;
        }

        .testimonial {
            background-color: #f5f5f5;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .stats ul {
            list-style-type: none;
        }

            .stats ul li {
                font-size: 24px;
                margin: 10px 0;
            }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <nav>
                <ul>
                    <li><a href="#services">Services</a></li>
                    <li><a href="#events">Events</a></li>
                    <li><a href="/Home/ContactUs">Contact</a></li>
                   
                </ul>
            </nav>
        </div>
    </header>

    <section id="banner">
        <div class="container">
            <h2>Welcome to Bike Hub</h2>
            <p>Your one-stop destination for all things cycling</p>
            <a href="#testimonials" class="btn">Learn More</a>
        </div>
    </section>

   

    <section id="services">
        <div class="container">
            <h2>Our Services</h2>
            <ul>
                <li>Bike Rentals</li>
                <li>Bike Repairs</li>
            </ul>
        </div>
    </section>

    <section id="testimonials">
        <div class="container">
            <h2>What Our Customers Say</h2>
            <div class="testimonial">
                <p>"Bike Hub made my commuting easy. The rentals are affordable, and the team is always helpful."</p>
                <p>- Reem J.</p>
            </div>
            <div class="testimonial">
                <p>"Their repair service is really good. The bike has never been in better shape!"</p>
                <p>- Jack S.</p>
            </div>
        </div>
    </section>
    <section id="about">
        <div class="container">
            <h2>About Us</h2>
            @if (Model != null && Model.Any())
            {
                foreach (var mo in Model)
                {
                    <div class="section">
                        <h3>@mo.SectionName</h3>
                        <p>@mo.Content</p>
                    </div>
                }
            }
            else
            {
                <p>No content available to display.</p>
            }
        </div>
    </section>

    <section id="events">
        <div class="container">
            <h2>Upcoming Events</h2>
            <p></p>
            <p></p>
            <p></p>
            <ul>
                <p></p>
                <li><strong>Bike Maintenance Workshop:  </strong>    September 30, 2024 - Learn how to fix basic issues and keep your bike in top shape.</li>
                <p></p>
                <li><strong>Community Ride:</strong> October 10, 2024 - Join us for a scenic ride around the city with fellow cyclists.</li>
            </ul>
        </div>
    </section>

  
</body>
</html>
