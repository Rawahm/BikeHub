@model IEnumerable<BikeHub.Models.Inventory>

@{
    ViewData["Title"] = "Inventory Management";
}
<h2>Inventory Management</h2>

<div>
    <a asp-action="CreateInventory" class="btn btn-primary">Add Inventory</a>
    <a asp-action="SearchInventory" class="btn btn-secondary">Search Inventory</a>
    <a asp-action="ArchivedItems" class="btn btn-secondary">Archived Inventory</a>

</div>


<table class="table">
    <thead>
        <tr>
            <th>Item Number</th>
            <th>Item Type</th>
            <th>Condition</th>
            <th>Price</th>
            <th>Availability Status</th>
            <th>Comments</th>
            <th>Retired Options</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemNumber</td>
                <td>@item.ItemType</td>
                <td>@item.Condition</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.AvailabilityStatus</td>
                <td>@item.Comments</td>
                <td>
                    @if (item.AvailabilityStatus == "Retired")
                    {
                        <span>@item.RetiredOptions</span>
                    }
                    else
                    {
                        <span>N/A</span> 
                    }
                </td>
                <td>
                    <a asp-action="UpdateInventory" asp-route-id="@item.ItemId" class="btn btn-primary">Update</a>
                    <a href="@Url.Action("ArchiveInventory", new { id = item.ItemId })"
                       onclick="return confirm('Are you sure you want to archive this item? Rember you can restore this record later!.');"
                       class="btn btn-warning">Archive</a>
                </td>
            </tr>
        }
    </tbody>
</table>
